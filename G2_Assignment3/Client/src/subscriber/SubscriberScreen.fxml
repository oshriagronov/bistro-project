<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriber.SubscriberScreen">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Subscriber Dashboard" />
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="newReservationBtn" onAction="#goToNewReservation" text="New Reservation" />
            <Button fx:id="updateReservationBtn" onAction="#goToUpdateReservation" text="Update Reservation" />
            <Button fx:id="waitingListBtn" onAction="#goToWaitingList" text="Waiting List" />
         </children>
      </HBox>
      
      <Button fx:id="revealUpdateBtn" onAction="#revealUpdateForm" text="Update Personal Info" />
      
      <VBox fx:id="updateForm" alignment="CENTER" spacing="10.0" visible="false">
         <children>
            <TextField fx:id="phoneField" maxWidth="200" promptText="New Phone Number" />
            <TextField fx:id="emailField" maxWidth="200" promptText="New Email Address" />
            <Button fx:id="submitBtn" onAction="#handleSubmit" text="Submit Changes" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="5.0">
         <Text style="-fx-font-weight: bold;" text="Reservation History" />
         <ListView fx:id="historyList" prefHeight="200.0" prefWidth="450.0" />
      </VBox>
      <Button fx:id="backBtn" onAction="#backToSubscriberLogin" text="Logout" />
   </children>
</VBox>