<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriber.SubscriberLoginScreen">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label styleClass="title" text="Subscriber Login" />

      <ToggleButton fx:id="switchView" onAction="#handleSwitchView" styleClass="button" text="Switch Login Method" />

      <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0" styleClass="form-card">
         <children>
            <Label styleClass="subtitle" text="Please enter your credentials" />
            
            <StackPane>
               <children>
                  <VBox fx:id="IDlogin" spacing="15.0" alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="100.0" text="Subscriber ID:" />
                              <TextField fx:id="subIDfield" HBox.hgrow="ALWAYS" promptText="Enter ID" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <VBox fx:id="usernamelogin" spacing="15.0" alignment="CENTER" visible="false" managed="false">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="100.0" text="Username:" />
                              <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" promptText="Username" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="100.0" text="Password:" />
                              <PasswordField fx:id="codeField" HBox.hgrow="ALWAYS" promptText="Password" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>

            <Button fx:id="loginBtn" defaultButton="true" maxWidth="150.0" onAction="#handleLogin" styleClass="primary" text="Login" />
         </children>
      </VBox>

      <VBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="backBtn" onAction="#backToLoginMenu" styleClass="back" text="Back" />
         </children>
      </VBox>
   </children>
</VBox>