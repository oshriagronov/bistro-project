<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="667.0" prefWidth="666.0" spacing="14" styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.StatusReportController">

	<padding>
		<Insets bottom="18" left="18" right="18" top="18" />
	</padding>

	<!-- Header "card" -->
	<VBox spacing="6">
    <Label fx:id="reportTitle" styleClass="title" text="Timing Report" />

    <Label styleClass="subtitle" text="Monthly overview of reservation timing patterns." />

    <Separator opacity="0.35" />

    <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
        <Label  text="Year:" />

        <ComboBox fx:id="yearComboBox" maxWidth="100.0" prefWidth="130.0" HBox.hgrow="ALWAYS" />

        <Label text="Month:" />
        <ComboBox fx:id="monthComboBox" maxWidth="100.0" prefWidth="131" HBox.hgrow="ALWAYS" />

        <Label text="Report:" />
        <ComboBox fx:id="reportTypeComboBox" maxWidth="100.0" prefWidth="102.0" HBox.hgrow="ALWAYS" />
        <Button fx:id="menuBtn" onAction="#backToMenu" prefHeight="34.0" prefWidth="110.0" styleClass="back" text="Back" />
    </HBox>
</VBox>


	<!-- Chart "card" -->
	<VBox spacing="10">
		<HBox alignment="CENTER_LEFT">
			<Label text="Status over time" />
			<Region HBox.hgrow="ALWAYS" />
		</HBox>

		<!-- Chart switch area (keeps layout stable) -->
		<StackPane prefHeight="460" VBox.vgrow="ALWAYS">

			<!-- Existing chart (arrival / current) -->
			<BarChart fx:id="statusBarChart" animated="false" legendVisible="true" prefHeight="460">
				<xAxis>
					<CategoryAxis label="Month" />
				</xAxis>
				<yAxis>
					<NumberAxis fx:id="yAxis" forceZeroInRange="true" label="Reservations" minorTickVisible="false" tickUnit="1" />
				</yAxis>
			</BarChart>

			<LineChart fx:id="departureLineChart" animated="false" legendVisible="true" managed="false" prefHeight="460" visible="false">
				<xAxis>
					<CategoryAxis label="Month" />
				</xAxis>
				<yAxis>
					<NumberAxis fx:id="departureYAxis" forceZeroInRange="true" label="Minutes" minorTickVisible="false" />
				</yAxis>
			</LineChart>
			

		</StackPane>
	</VBox>

</VBox>
