<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="650" prefWidth="980" spacing="14"
	style="-fx-background-color: #F6F7FB;"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="employee.StatusReportController">

	<padding>
		<Insets bottom="18" left="18" right="18" top="18" />
	</padding>

	<!-- Header "card" -->
	<VBox spacing="6"
		style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 18, 0.2, 0, 6);">
		<Label fx:id="reportTitle"
			style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #111827;"
			text="Timing Report" />

		<Label style="-fx-font-size: 12.5px; -fx-text-fill: #6B7280;"
			text="Monthly overview of reservation timing patterns." />

		<Separator opacity="0.35" />

		<!-- Filters row -->
		<HBox alignment="CENTER_LEFT" spacing="10">
			<Label style="-fx-font-size: 13px; -fx-text-fill: #374151;"
				text="Year:" />

			<ComboBox fx:id="yearComboBox" prefWidth="140"
				style="-fx-background-radius: 10; -fx-font-size: 13px;" />

			<Region HBox.hgrow="ALWAYS" />

			<Button fx:id="refreshBtn" onAction="#onRefresh"
				style="-fx-background-color: #111827; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 14; -fx-font-weight: 600;"
				text="Refresh" />
		</HBox>
	</VBox>

	<!-- Chart "card" -->
	<VBox spacing="10"
		style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 18, 0.2, 0, 6);">
		<HBox alignment="CENTER_LEFT">
			<Label
				style="-fx-font-size: 14px; -fx-font-weight: 700; -fx-text-fill: #111827;"
				text="Status over time" />
			<Region HBox.hgrow="ALWAYS" />
			<Label style="-fx-font-size: 12px; -fx-text-fill: #6B7280;"
				text="Jan â†’ Dec" />
		</HBox>

		<BarChart fx:id="statusBarChart" animated="false"
			legendVisible="true" prefHeight="460"
			style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
			<xAxis>
				<CategoryAxis label="Month" />
			</xAxis>
			<yAxis>
				<NumberAxis fx:id="yAxis" label="Reservations"
					tickUnit="1" minorTickVisible="false" forceZeroInRange="true" />
			</yAxis>
		</BarChart>
	</VBox>

</VBox>
