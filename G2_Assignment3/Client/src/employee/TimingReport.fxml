<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="900.0" spacing="14" styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.StatusReportController">

    <padding>
        <Insets bottom="18" left="18" right="18" top="18" />
    </padding>

    <VBox spacing="10" styleClass="form-card">
        <Label fx:id="reportTitle" styleClass="title" text="Timing Report" />
        <Label styleClass="subtitle" text="Monthly overview of reservation timing patterns." />
        <Separator opacity="0.35" />

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="Year:" />
            <ComboBox fx:id="yearComboBox" minWidth="120.0" prefHeight="38.0" />

            <Label text="Month:" />
            <ComboBox fx:id="monthComboBox" minWidth="120.0" prefHeight="38.0" />

            <Label text="Report:" />
            <ComboBox fx:id="reportTypeComboBox" minWidth="180.0" prefHeight="38.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>

    <VBox spacing="10" styleClass="form-card" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Status Visualization" />
        </HBox>

        <StackPane prefHeight="460" VBox.vgrow="ALWAYS">
            <BarChart fx:id="statusBarChart" animated="false" legendVisible="true">
                <xAxis>
                    <CategoryAxis label="Month" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" forceZeroInRange="true" label="Reservations" minorTickVisible="false" tickUnit="1" />
                </yAxis>
            </BarChart>

            <LineChart fx:id="departureLineChart" animated="false" legendVisible="true" managed="false" visible="false">
                <xAxis>
                    <CategoryAxis label="Month" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="departureYAxis" forceZeroInRange="true" label="Minutes" minorTickVisible="false" />
                </yAxis>
            </LineChart>
        </StackPane>

       
    </VBox>
	 <HBox alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="menuBtn" onAction="#backToMenu" prefHeight="38.0" prefWidth="120.0" styleClass="back" text="Back" />
        </HBox>
</VBox>
