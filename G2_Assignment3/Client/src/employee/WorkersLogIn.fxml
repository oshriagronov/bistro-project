<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.WorkersLogInScreen">

    <children>

        <!-- CENTER CONTENT (Form) -->
        <VBox alignment="CENTER" spacing="25">

            <Label alignment="CENTER" prefWidth="600" styleClass="title" text="BISTRO WORKSPACE" />

            <Text styleClass="subtitle" text="Please log in using staff credentials" />

            <!-- Form Card -->
            <VBox prefHeight="168.0" prefWidth="550.0" spacing="18" styleClass="form-card" VBox.vgrow="ALWAYS">

                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>

                <HBox spacing="6">
                    <children>
                        <Label text="Username:" />
                        <TextField fx:id="usernameTxt" maxWidth="220.0" prefWidth="145.0" promptText="Enter username" styleClass="text-field" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="6">
                    <children>
                        <Label text="Password:" />
                        <PasswordField fx:id="passwordTxt" maxWidth="220" prefWidth="220" promptText="Enter password" styleClass="text-field" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <Text fx:id="statusText" style="-fx-fill: #b00020;" />

            </VBox>
         <HBox alignment="TOP_RIGHT" prefHeight="70.0" prefWidth="600.0" spacing="130.0">
            <children>
      
                                             <!-- Login Button -->
                  <Button fx:id="loginBTN" defaultButton="true" onAction="#login" prefWidth="200" styleClass="primary" text="Log in" />
      
                                     
                                        <Button fx:id="backBtn" onAction="#back" styleClass="back" text="Back" />
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </HBox>

        </VBox>

    </children>

</StackPane>
