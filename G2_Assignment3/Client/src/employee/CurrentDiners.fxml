<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../../Css/style.css" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.CurrentDinersScreen">

    <top>
        <VBox style="-fx-padding: 18;">
            <VBox prefHeight="95.0" prefWidth="863.0" spacing="8" styleClass="form-card">
                <Label styleClass="title" text="Tables &amp; Current Reservations" />
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="523.0" styleClass="subtitle" text="Live snapshot of current diners per table." />
                    </children>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 18 18 18;">
            <VBox spacing="10" styleClass="form-card" VBox.vgrow="ALWAYS">
                <TableView fx:id="tableView" prefHeight="470" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tableNumberCol" prefWidth="110" text="Table #" />
                        <TableColumn fx:id="orderNumberCol" prefWidth="120" text="Order ID" />
                        <TableColumn fx:id="phoneCol" prefWidth="130" text="Phone" />
                        <TableColumn fx:id="emailCol" prefWidth="220" text="Email" />
                        <TableColumn fx:id="subscriberIdCol" prefWidth="90" text="Sub ID" />
                        <TableColumn fx:id="dinersCol" prefWidth="160" text="Number of diners" />
                    </columns>
                </TableView>
            </VBox>
                <HBox spacing="10" style="-fx-padding: 6 0 0 0;">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="menuBtn" onAction="#menu" prefHeight="34" prefWidth="233.0" styleClass="back" text="Back to menu" />
                    </children>
                </HBox>
        </VBox>
    </center>

</BorderPane>