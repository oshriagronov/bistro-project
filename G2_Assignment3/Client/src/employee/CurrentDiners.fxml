        <VBox layoutX="20.0" layoutY="70.0" prefWidth="860.0" spacing="10.0">
            <TableView fx:id="tableView" prefHeight="460.0" prefWidth="860.0">
                <columns>
                    <TableColumn fx:id="tableNumberCol" prefWidth="100.66671562194824" text="Table number" />
                    <TableColumn fx:id="orderNumberCol" prefWidth="134.0" text="Order number" />
                    <TableColumn fx:id="phoneCol" prefWidth="119.33332061767578" text="Phone" />
                    <TableColumn fx:id="emailCol" prefWidth="196.6666717529297" text="Email" />
                    <TableColumn fx:id="subscriberIdCol" prefWidth="106.00003051757812" text="Sub ID" />
                    <TableColumn fx:id="dinersCol" prefWidth="127.99993896484375" text="Number of diners" />
                </columns>
            </TableView>

            <Separator />

            <HBox spacing="10.0">
                <children>
                    <Button fx:id="refreshBtn" onAction="#refresh" text="Refresh" />
                    <Button fx:id="menuBtn" onAction="#menu" text="Back to menu" />
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
