<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f6f7fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.CurrentDinersScreen">

    <!-- TOP: Header card -->
    <top>
        <VBox style="-fx-padding: 18;">
            <VBox spacing="8" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">
                <Label style="-fx-font-size: 22px; -fx-font-weight: 800;" text="Tables &amp; Current Reservations" textFill="#2f0ceb" />

                <Label style="-fx-text-fill: #6a7286;" text="Live snapshot of current diners per table." />
            </VBox>
        </VBox>
    </top>

    <!-- CENTER: Table card -->
    <center>
        <VBox style="-fx-padding: 0 18 18 18;">
            <VBox spacing="10" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">
                <TableView fx:id="tableView" prefHeight="470" style="-fx-background-radius: 10; -fx-border-radius: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tableNumberCol" prefWidth="110" text="Table #" />
                        <TableColumn fx:id="orderNumberCol" prefWidth="120" text="Order ID" />
                        <TableColumn fx:id="phoneCol" prefWidth="130" text="Phone" />
                        <TableColumn fx:id="emailCol" prefWidth="220" text="Email" />
                        <TableColumn fx:id="subscriberIdCol" prefWidth="90" text="Sub ID" />
                        <TableColumn fx:id="dinersCol" prefWidth="160" text="Number of diners" />
                    </columns>
                </TableView>

                <!-- Footer buttons -->
                <HBox spacing="10" style="-fx-padding: 6 0 0 0;">
                    <Button fx:id="refreshBtn" onAction="#refresh" prefHeight="34" style="-fx-background-color: #2f5bea;                                    -fx-text-fill: white;                                    -fx-font-weight: 700;                                    -fx-background-radius: 8;                                    -fx-padding: 6 14;" text="Refresh" />

                    <Button fx:id="menuBtn" onAction="#menu" prefHeight="34" style="-fx-background-color: #eef1f7;                                    -fx-text-fill: #1f2a44;                                    -fx-font-weight: 700;                                    -fx-background-radius: 8;                                    -fx-padding: 6 14;" text="Back to menu" />
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
