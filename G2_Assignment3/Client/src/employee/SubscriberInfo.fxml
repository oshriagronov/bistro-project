<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.SubscribersInfoScreen">

	<top>
		<VBox alignment="CENTER" spacing="10">
			<Label styleClass="title" text="Subscribers Info" />
			<Label styleClass="subtitle" text="Search and manage subscriber records and history" />
			
			<VBox styleClass="form-card">
				<HBox alignment="CENTER_LEFT" spacing="15">
					<TextField fx:id="inputTXT" promptText="Enter subscriber code..." HBox.hgrow="ALWAYS" />
					<Button fx:id="searchBTN" onAction="#clickSearch" styleClass="primary" text="Search" />
					<Button fx:id="clearBTN" onAction="#clickClear" text="Clear" />
				</HBox>
				<Label fx:id="statusLabel" />
			</VBox>
		</VBox>
	</top>

	<center>
		<HBox spacing="20">
			
			<VBox prefWidth="320" spacing="15" styleClass="form-card">
				<Label text="Subscriber Details" />
				
				<VBox spacing="8">
					<Label text="Phone Number" />
					<TextField fx:id="phoneTxt" editable="false" />
				</VBox>
				
				<VBox spacing="8">
					<Label text="Email Address" />
					<TextField fx:id="emailTxt" editable="false" />
				</VBox>
				
				<Separator />
				
				<Label text="Identification Barcode" />
				<VBox alignment="CENTER">
					<ImageView fx:id="BarcodeIMG" fitHeight="150.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" />
				</VBox>
			</VBox>

			<VBox prefHeight="416.0" prefWidth="611.0" spacing="10" styleClass="form-card" HBox.hgrow="ALWAYS">
				<Label text="Order History" />
				<TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="orderIdCol" text="Order ID" />
						<TableColumn fx:id="confirmationCodeCol" text="Conf. Code" />
						<TableColumn fx:id="dateCol" text="Date" />
						<TableColumn fx:id="startTimeCol" text="Start" />
						<TableColumn fx:id="finishTimeCol" text="Finish" />
						<TableColumn fx:id="dinersCol" text="Diners" />
						<TableColumn fx:id="statusCol" text="Status" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</VBox>
		</HBox>
	</center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="menuBTN" onAction="#clickMenu" prefHeight="42.0" prefWidth="136.0" styleClass="back" text="Back" />
        </HBox>
    </bottom>

</BorderPane>
