<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@../../../Css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.TablesManagementScreen">

    <!-- ===== TOP ===== -->
   <top>
    <VBox spacing="8" alignment="CENTER">
        <Label text="Table Management"
               styleClass="title"/>

        <Label text="View all tables, edit a selected table, add new tables, or delete existing ones."
               styleClass="subtitle"/>
    </VBox>
</top>


    <!-- ===== CENTER ===== -->
    <center>
    <HBox spacing="14" style="-fx-padding: 18;">

        <!-- LEFT: Tables list -->
        <VBox spacing="10"
              styleClass="form-card"
              HBox.hgrow="ALWAYS">

            <Label text="Tables"/>

            <TableView fx:id="tablesTable"
                       VBox.vgrow="ALWAYS">

                <columns>
                    <TableColumn fx:id="tableNumberCol" text="Table Number" prefWidth="160"/>
                    <TableColumn fx:id="tableSizeCol" text="Table Size" prefWidth="140"/>
                    <TableColumn fx:id="reservationCol" text="Current reservation" prefWidth="220"/>
                </columns>

            </TableView>
        </VBox>

        <!-- RIGHT: Actions -->
        <VBox prefWidth="260"
              spacing="12"
              styleClass="form-card">

            <Label text="Actions"/>

            <!-- Edit -->
            <Label text="Edit selected table"/>

            <HBox spacing="10">
                <Label prefWidth="80" text="New size:"/>
                <ComboBox fx:id="sizeCombo"
                          maxWidth="Infinity"
                          HBox.hgrow="ALWAYS"/>
            </HBox>

            <Button fx:id="applySizeBtn"
                    text="Apply Size"
                    onAction="#clickEditSize"
                    maxWidth="Infinity"
                    styleClass="primary"/>

            <Separator/>

            <!-- Add -->
            <Label text="Add a new table"/>

            <HBox spacing="10">
                <Label prefWidth="80" text="Table size:"/>
                <ComboBox fx:id="newTableSize"
                          maxWidth="Infinity"
                          HBox.hgrow="ALWAYS"/>
            </HBox>

            <Button fx:id="addBtn"
                    text="Add"
                    onAction="#addNewTable"
                    maxWidth="Infinity"
                    styleClass="primary"/>

            <Separator/>

            <!-- Delete -->
            <Button fx:id="deleteBtn"
                    text="Delete selected"
                    onAction="#deleteTable"
                    maxWidth="Infinity"
                    styleClass="primary"/>

            <!-- Spacer -->
            <VBox VBox.vgrow="ALWAYS"/>

            <!-- Back -->
            <Button fx:id="menuBtn"
                    text="Back to menu"
                    onAction="#clickMenu"
                    maxWidth="Infinity"
                    styleClass="back"/>
        </VBox>

    </HBox>
</center>

</BorderPane>
