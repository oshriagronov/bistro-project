<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>


<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gui.OrderScreen"
           stylesheets="@../../../Css/style.css"
           styleClass="root"
           prefWidth="578" prefHeight="500">

    <children>

        <VBox alignment="TOP_CENTER"
              spacing="20"
              styleClass="form-card"
              maxWidth="350">

            <!-- TITLE -->
            <Label text="New reservation"
	       styleClass="title"
	       prefWidth="400"
	       prefHeight="50"
	       maxWidth="Infinity"
	       alignment="CENTER"/>




            <VBox prefHeight="345.0" prefWidth="298.0">

                <children>

                    <VBox fx:id="subVbox" prefHeight="130.0" prefWidth="276.0">
                        <children>
                            <HBox prefHeight="36.0" prefWidth="249.0">
                                <children>
                                    <Text text="Date:">
                                        <HBox.margin>
                                            <Insets right="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <DatePicker fx:id="orderDate"
						            prefWidth="240"
						            minWidth="240"
						            maxWidth="Infinity"
						            HBox.hgrow="ALWAYS"
						            styleClass="text-field"/>

                                </children>
                            </HBox>

                            <HBox prefHeight="36.0" prefWidth="249.0">
                                <children>
                                    <Text text="Amount:">
                                        <HBox.margin>
                                            <Insets right="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <ComboBox fx:id="dinersAmmount"
							          prefWidth="240"
							          minWidth="240"
							          maxWidth="Infinity"
							          HBox.hgrow="ALWAYS"
							          styleClass="combo-box-base"/>

                                </children>
                            </HBox>

                            <HBox prefHeight="42.0" prefWidth="200.0">
                                <children>
                                    <HBox prefHeight="36.0" prefWidth="249.0">
                                        <children>
                                            <Text text="Time:">
                                                <HBox.margin>
                                                    <Insets right="10.0"/>
                                                </HBox.margin>
                                            </Text>
                                           <ComboBox fx:id="orderHours"
									          prefWidth="240"
									          minWidth="240"
									          maxWidth="Infinity"
									          HBox.hgrow="ALWAYS"
									          styleClass="combo-box-base">

                                                <HBox.margin>
                                                    <Insets right="20.0"/>
                                                </HBox.margin>
                                            </ComboBox>
                                        </children>
                                    </HBox>
                                </children>
                            </HBox>

                        </children>
                    </VBox>

                    <VBox fx:id="nonSubVbox" prefHeight="72.0" prefWidth="212.0">
                        <children>
                            <HBox prefHeight="32.0" prefWidth="212.0">
                                <children>
                                    <Text text="Phone:">
                                        <HBox.margin>
                                            <Insets right="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <ComboBox fx:id="phoneStart"
					                  prefWidth="100"
					                  maxWidth="120"
					                  HBox.hgrow="ALWAYS"
					          		styleClass="combo-box-base"/>
					          		<TextField fx:id="phoneNumber"
					                   prefWidth="180"
					                   maxWidth="200"
					                   HBox.hgrow="ALWAYS"
						           styleClass="text-field">

                                        <HBox.margin>
                                            <Insets left="10.0"/>
                                        </HBox.margin>
                                    </TextField>
                                </children>
                            </HBox>

                            <HBox prefHeight="31.0" prefWidth="200.0">
                                <children>
                                    <Text text="Email:">
                                        <HBox.margin>
                                            <Insets right="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <TextField fx:id="orderEmail"
                                        prefWidth="220"
								          HBox.hgrow="ALWAYS"
								          styleClass="combo-box-base"/>
                                </children>
                            </HBox>

                        </children>
                    </VBox>

                    <VBox fx:id="workerVbox" prefHeight="72.0" prefWidth="175.0">
                        <children>
                            <HBox prefHeight="42.0" prefWidth="175.0">
                                <children>
                                    <Text text="Are you subbed?">
                                        <HBox.margin>
                                            <Insets right="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <CheckBox fx:id="checkBox"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <VBox fx:id="btnVbox" prefHeight="57.0" prefWidth="175.0">
                        <children>
                            <Button fx:id="orderBtn"
                                    text="Order"
                                    onAction="#clickOrder"
                                    styleClass="button primary">
                                <VBox.margin>
                                    <Insets bottom="10.0"/>
                                </VBox.margin>
                            </Button>
                        </children>
                    </VBox>

                </children>

            </VBox>

        </VBox>

        <!-- BACK BUTTON -->
        <Button fx:id="backBtn"
        text="Back"
        onAction="#back"
        styleClass="button back"
        StackPane.alignment="BOTTOM_RIGHT">
    <StackPane.margin>
        <Insets bottom="20" right="20"/>
    </StackPane.margin>
</Button>


    </children>

</StackPane>
