<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TablesManagementScreen">

    <children>

        <!-- Title -->
        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Table Management" textFill="#230ae0" />

        <!-- Main content -->
        <HBox layoutX="20.0" layoutY="70.0" prefHeight="500.0" prefWidth="860.0" spacing="15.0">

            <!-- LEFT: Tables list -->
            <VBox prefWidth="550.0" spacing="10.0">

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tables" textFill="#141414" />

                <TableView fx:id="tablesTable" prefHeight="430.0" prefWidth="550.0">

                    <columns>
                        <TableColumn fx:id="tableNumberCol" prefWidth="180.0" text="Table Number" />

                        <TableColumn fx:id="tableSizeCol" prefWidth="180.0" text="Table Size" />

                        <TableColumn fx:id="tableStatusCol" prefWidth="180.0" text="Status" />
                    </columns>
                </TableView>
            </VBox>

            <!-- SEPARATOR -->
            <Separator orientation="VERTICAL" />

            <!-- RIGHT: Edit section -->
            <VBox prefWidth="280.0" spacing="15.0">

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Edit Selected Table" textFill="#130fe4" />

                <!-- Size edit section -->
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Edit Size" />

                <HBox spacing="10.0">
                    <Label prefWidth="80.0" text="New Size:" />
               <ComboBox fx:id="sizeCombo" prefWidth="150.0" />
                </HBox>

                <Button fx:id="applySizeBtn" onAction="#clickEditSize" prefWidth="200.0" text="Apply Size" />

                <Separator />

                <!-- Status edit section -->
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Edit Status" />

                <HBox spacing="10.0">
                    <Label prefWidth="80.0" text="New Status:" />
                    <ComboBox fx:id="statusCombo" prefWidth="150.0" />
                </HBox>

                <Button fx:id="applyStatusBtn" onAction="#clickApplyStatus" prefWidth="200.0" text="Apply Status" />
            <Separator />
            <Button fx:id="menuBtn" mnemonicParsing="false" onAction="#clickMenu" text="Back to menu">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>

            </VBox>

        </HBox>

    </children>
</AnchorPane>
