<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.WaitingListScreen"
      styleClass="root">

    <children>

        <!-- Title -->
        <Text text="Enter Waiting List"
              layoutX="200"
              layoutY="50"
              styleClass="text title"/>

        <!-- Subtitle -->
        <Text text="You must enter phone number or email (or both)"
              layoutX="150"
              layoutY="80"
              wrappingWidth="300"
              styleClass="text subtitle"/>

        <!-- Form Card -->
        <VBox layoutX="150"
              layoutY="110"
              prefWidth="300"
              spacing="15"
              styleClass="form-card">

            <!-- Diners -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Text text="Amount of diners" styleClass="text"/>
                <ComboBox fx:id="diners" prefWidth="80"/>
            </HBox>

            <!-- Non Subscriber -->
            <VBox fx:id="nonSubVbox" spacing="10">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="Phone number" styleClass="text"/>
                    <ComboBox fx:id="prePhone" prefWidth="60"/>
                    <TextField fx:id="phoneField" prefWidth="160"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="Email" styleClass="text"/>
                    <TextField fx:id="emailField" prefWidth="240"/>
                </HBox>

            </VBox>

            <!-- Worker / Subscriber -->
            <VBox fx:id="workerVbox">
                <CheckBox fx:id="subCheckBox" text="Is subscriber?"/>
            </VBox>

        </VBox>

        <!-- Buttons -->
        <Button fx:id="submit"
                text="Submit"
                layoutX="260"
                layoutY="340"
                onAction="#submit"
                styleClass="button primary"/>

        <Button fx:id="backBtn"
                text="Back"
                layoutX="500"
                layoutY="350"
                onAction="#back"
                styleClass="button back"/>

    </children>
</Pane>
