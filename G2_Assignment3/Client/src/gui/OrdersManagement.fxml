<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OrdersManagementScreen">

    <!-- TOP: Search -->
    <top>
        <VBox spacing="12" style="-fx-padding: 15;" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Orders Management" textFill="#071ae6">
            <font>
               <Font name="Calibri Bold" size="12.0" />
            </font></Label>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Phone number: " />
                <TextField fx:id="phoneTXT" prefWidth="220" />
                <Button fx:id="searchBTN" onAction="#clickSearch" text="Search" />
                <Button fx:id="clearBTN" onAction="#clickClear" text="Clear" />
            </HBox>

            <Label fx:id="statusLabel" text="" />
            <Separator />
        </VBox>
    </top>

    <!-- CENTER: Table -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <TableView fx:id="ordersTable" prefHeight="450" VBox.vgrow="ALWAYS" maxWidth="Infinity">
                <columns>
                    <TableColumn fx:id="orderIdCol" prefWidth="100" text="Order ID" />
                    <TableColumn fx:id="dateCol" prefWidth="120" text="Date" />
                    <TableColumn fx:id="timeCol" prefWidth="100" text="Time" />
                    <TableColumn fx:id="dinersCol" prefWidth="80" text="Diners" />
                    <TableColumn fx:id="statusCol" prefWidth="140" text="Status" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10" />
        </VBox>
    </center>

    <!-- RIGHT: Status change panel (Option 2) -->
    <right>
        <VBox prefWidth="200" maxWidth="200" spacing="10" style="-fx-padding: 15;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Selected Order" />

            <Label text="New Status:" />
            <ComboBox fx:id="statusCombo" prefWidth="200" />

            <Button fx:id="applyStatusBTN" onAction="#clickApplyStatus" text="Apply Status" />
             <Button fx:id="deleteBTN" onAction="#clickDeleteSelected" text="Delete Selected" />

            <Separator />
         <Button fx:id="menuBTN" alignment="CENTER" mnemonicParsing="false" onAction="#clickMenu" text="Back to menu">
            <VBox.margin>
               <Insets top="250.0" />
            </VBox.margin>
         </Button>
        </VBox>
    </right>

</BorderPane>
