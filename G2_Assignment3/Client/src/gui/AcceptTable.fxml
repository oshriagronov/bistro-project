<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AcceptTableScreen">

   <children>

      <Text fill="#4233c6" layoutX="180.0" layoutY="40.0" text="Accept your table here">
         <font>
            <Font size="24.0" />
         </font>
      </Text>

      <VBox fx:id="infoVbox" layoutX="157.0" layoutY="74.0" prefHeight="265.0" prefWidth="373.0" spacing="12.0">
         <children>

            <HBox fx:id="subscriberConfirmationBox" managed="false" prefHeight="52.0" prefWidth="178.0" spacing="10.0" visible="false">
               <children>
                  <Text text="confirmation code" />
                  <ComboBox fx:id="subscriberConfirmationCodes" prefWidth="134.0" />
               </children>
            </HBox>
            <VBox fx:id="detailsVbox" prefHeight="114.0" prefWidth="367.0" spacing="10.0">
               <children>
                  <Text fx:id="identifyingDetailsText" managed="false" strokeType="OUTSIDE" strokeWidth="0.0" text="please enter the identifying detail you put when you placed the order" visible="false" wrappingWidth="413.744140625" />

                  <HBox fx:id="confirmationBox" alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="266.0" spacing="10.0">
                     <children>
                        <Text text="confirmation code" />
                        <TextField fx:id="confirmationCode" prefWidth="68.0" />
                     </children>
                  </HBox>
      
                  <HBox fx:id="phoneBox" alignment="CENTER_LEFT" managed="false" prefHeight="65.0" prefWidth="367.0" spacing="10.0" visible="false">
                     <children>
                        <Text text="phone">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Text>
                        <ComboBox fx:id="prePhone" prefHeight="26.0" prefWidth="65.0" />
                        <TextField fx:id="restPhone" prefHeight="11.0" prefWidth="134.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="emailBox" alignment="CENTER_LEFT" managed="false" prefHeight="50.0" prefWidth="367.0" spacing="10.0" visible="false">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" />
                        <TextField fx:id="emailField" />
                     </children>
                  </HBox>
                  <CheckBox fx:id="forgotCheckBox" mnemonicParsing="false" onAction="#handleForgotCheckBox" text="forgot your code?">
                     <VBox.margin>
                        <Insets top="6.0" />
                     </VBox.margin>
                  </CheckBox>
               </children>
            </VBox>

            <HBox prefHeight="28.0" prefWidth="168.0">
               <children>
                  <Button fx:id="submitBTN" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="25.0" prefWidth="61.0" text="Submit">
                     <HBox.margin>
                        <Insets top="8.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="getConfirmationBtn" alignment="CENTER" contentDisplay="CENTER" managed="false" mnemonicParsing="false" onAction="#handleGetConfirmationCode" prefHeight="25.0" prefWidth="165.0" text="get confirmation code" visible="false">
                     <HBox.margin>
                        <Insets top="8.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>

         </children>
      </VBox>

      <HBox alignment="CENTER" layoutX="0.0" layoutY="220.0" mouseTransparent="true" pickOnBounds="false" prefWidth="600.0">
         <children>
            <Text fx:id="tableResultText" fill="#4233c6" visible="false">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>
         </children>
      </HBox>

      <Button fx:id="backBtn" layoutX="509.0" layoutY="352.0" mnemonicParsing="false" onAction="#back" text="Back" />
      
   </children>
</Pane>
