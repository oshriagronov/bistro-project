<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/css/style.css"
      fx:controller="gui.AcceptTableScreen">

    <children>

        <!-- TITLE -->
        <Label fx:id="title"
               layoutX="80.0"
               layoutY="25.0"
               text="Accept your table here"
               styleClass="title"/>

        <!-- FORM CARD -->
        <VBox fx:id="infoVbox"
              layoutX="110.0"
              layoutY="90.0"
              prefWidth="380.0"
              spacing="14"
              styleClass="form-card">

            <children>

                <!-- SUBSCRIBER CONFIRMATION -->
                <HBox fx:id="subscriberConfirmationBox"
                      spacing="10"
                      managed="false"
                      visible="false">
                    <children>
                        <Text text="confirmation code"/>
                        <ComboBox fx:id="subscriberConfirmationCodes"/>
                    </children>
                </HBox>

                <!-- DETAILS -->
                <VBox fx:id="detailsVbox" spacing="10">
                    <children>

                        <Text fx:id="identifyingDetailsText"
                              text="please enter the identifying detail you put when you placed the order"
                              wrappingWidth="340"
                              managed="false"
                              visible="false"
                              styleClass="subtitle"/>

                        <HBox fx:id="confirmationBox" spacing="10">
                            <children>
                                <Text text="confirmation code"/>
                                <TextField fx:id="confirmationCode"/>
                            </children>
                        </HBox>

                        <HBox fx:id="phoneBox"
                              spacing="10"
                              managed="false"
                              visible="false">
                            <children>
                                <Text text="phone"/>
                                <ComboBox fx:id="prePhone" prefWidth="70"/>
                                <TextField fx:id="restPhone"/>
                            </children>
                        </HBox>

                        <HBox fx:id="emailBox"
                              spacing="10"
                              managed="false"
                              visible="false">
                            <children>
                                <Text text="Email"/>
                                <TextField fx:id="emailField"/>
                            </children>
                        </HBox>

                        <CheckBox fx:id="forgotCheckBox"
                                  text="forgot your code?"
                                  onAction="#handleForgotCheckBox"/>
                    </children>
                </VBox>

                <!-- BUTTONS -->
                <HBox spacing="10">
                    <children>
                        <Button fx:id="submitBTN"
                                text="Submit"
                                onAction="#handleSubmit"
                                styleClass="button primary"/>

                        <Button fx:id="getConfirmationBtn"
                                text="Recover Confirmation Code"
                                onAction="#handleGetConfirmationCode"
                                managed="false"
                                visible="false"
                                styleClass="button"/>
                    </children>
                </HBox>

            </children>
        </VBox>

        <!-- RESULT TEXT -->
        <HBox alignment="CENTER"
              layoutY="260"
              prefWidth="600"
              mouseTransparent="true">
            <children>
                <Text fx:id="tableResultText"
                      visible="false">
                    <font>
                        <Font size="32"/>
                    </font>
                </Text>
            </children>
        </HBox>

        <!-- BACK BUTTON -->
        <Button fx:id="backBtn"
                layoutX="500"
                layoutY="350"
                text="Back"
                onAction="#back"
                styleClass="button back"/>

    </children>
</Pane>
