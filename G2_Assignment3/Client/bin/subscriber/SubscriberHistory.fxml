<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriber.SubscriberHistoryScreen">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reservation History" />
      <TableView fx:id="historyTable" prefHeight="300.0" prefWidth="450.0">
         <columns>
            <TableColumn fx:id="orderDateCol" text="Order date" />
            <TableColumn fx:id="guestsCol" text="Guests" />
            <TableColumn fx:id="confirmationCodeCol" text="Confirmation Code" />
            <TableColumn fx:id="placedCol" text="Placed" />
            <TableColumn fx:id="statusCol" text="Status" />
            <TableColumn fx:id="startTimeCol" text="Start Time" />
            <TableColumn fx:id="finishTimeCol" text="Finish Time" />
         </columns>
      </TableView>
      <Region VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" maxWidth="Infinity" spacing="10.0">
         <children>
            <Button fx:id="backBtn" onAction="#backToSubscriberScreen" text="Back" />
         </children>
      </HBox>
   </children>
</VBox>
