<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriber.SubscriberScreen">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Subscriber Dashboard" />
      
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="newReservationBtn" minWidth="180.0" onAction="#goToNewReservation" prefWidth="180.0" text="New Reservation" />
            <Button fx:id="updateReservationBtn" minWidth="180.0" onAction="#goToUpdateReservation" prefWidth="180.0" text="Update Reservation" />
            <Button fx:id="waitingListBtn" minWidth="180.0" onAction="#goToWaitingList" prefWidth="180.0" text="Waiting List" />
            <Button fx:id="historyBtn" minWidth="180.0" onAction="#goToReservationHistory" prefWidth="180.0" text="Reservation History" />
            <Button fx:id="updateInfoBtn" minWidth="180.0" onAction="#updateInfo" prefWidth="180.0" text="Update Personal Info" />
         </children>
      </VBox>
      
      <VBox fx:id="updateForm" alignment="CENTER" spacing="10.0" visible="false">
         <children>
            <TextField fx:id="phoneField" maxWidth="200" promptText="New Phone Number" />
            <TextField fx:id="emailField" maxWidth="200" promptText="New Email Address" />
            <Button fx:id="submitBtn" minWidth="180.0" onAction="#handleSubmit" prefWidth="180.0" text="Submit Changes" />
         </children>
      </VBox>
      
      <Region VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" maxWidth="Infinity" spacing="10.0">
         <children>
            <Button fx:id="backBtn" onAction="#backToSubscriberLogin" text="Logout" />
         </children>
      </HBox>
   </children>
</VBox>
