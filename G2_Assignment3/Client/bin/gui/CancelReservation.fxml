<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="285.0" prefWidth="390.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="gui.CancelReservationScreen">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" spacing="15">
                    <children>
                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Cancel Reservation" textAlignment="CENTER" textFill="#0e4c99" />
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Label alignment="CENTER_LEFT" minWidth="120.0" prefWidth="120.0" text="Email" />
                                        <TextField fx:id="emailField" maxWidth="250" prefWidth="180.0" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Label alignment="CENTER_LEFT" minWidth="120.0" prefWidth="120.0" text="Phone number" />
                                        <TextField fx:id="phoneField" maxWidth="250" prefHeight="26.0" prefWidth="180.0" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Label alignment="CENTER_LEFT" minWidth="120.0" prefWidth="120.0" text="Confirmation Code" />
                                        <TextField fx:id="ConfirmationCodeField" maxWidth="250" prefWidth="180.0" />
                                    </children>
                                </HBox>

                                <Button maxWidth="200" onAction="#cancelReservation" text="cancel reservation" />
                            </children>
                        </VBox>

                        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" text="" />
                    </children>
                </VBox>
            </children>
        </StackPane>
        <Button onAction="#back" text="Back" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
    </children>
</AnchorPane>
