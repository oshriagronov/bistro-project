<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f6f7fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.OrdersManagementScreen">

	<!-- TOP: Header + Search -->
	<top>
		<VBox prefHeight="183.0" prefWidth="1013.0" spacing="12" style="-fx-padding: 18;" BorderPane.alignment="CENTER">
			<!-- Card -->
			<VBox prefHeight="147.0" prefWidth="1004.0" spacing="10" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">
				<Label style="-fx-font-size: 22px; -fx-font-weight: 800;" text="Orders Management" textFill="#0c35eb" />

				<HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="921.0" spacing="10">

					<ComboBox fx:id="inputChoiceCB" prefHeight="32.0" prefWidth="140.0" />

					<TextField fx:id="inputTXT" prefHeight="32.0" prefWidth="260.0" promptText="Enter phone or email..." />

					<Button fx:id="searchBTN" onAction="#clickSearch" style="-fx-background-color: #2f5bea;                                    -fx-text-fill: white;                                    -fx-font-weight: 700;                                    -fx-background-radius: 8;                                    -fx-padding: 6 14;" text="Search" />

					<Button fx:id="clearBTN" onAction="#clickClear" style="-fx-background-color: #eef1f7;                                    -fx-text-fill: #1f2a44;                                    -fx-font-weight: 700;                                    -fx-background-radius: 8;                                    -fx-padding: 6 14;" text="Clear" />
      
      			<Button fx:id="menuBTN" onAction="#clickMenu" style="-fx-background-color: #eef1f7;                            -fx-text-fill: #1f2a44;                            -fx-font-weight: 700;                            -fx-background-radius: 8;                            -fx-padding: 8 14;" text="Back to menu" />
				</HBox>

				<Label fx:id="statusLabel" style="-fx-text-fill: #6a7286;" text="" />

				<Separator />
			</VBox>
		</VBox>
	</top>

	<!-- CENTER: Orders Table -->
	<center>
		<VBox spacing="12" style="-fx-padding: 18;">
			<!-- Card -->
			<VBox spacing="10" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">
				<TableView fx:id="ordersTable" maxWidth="Infinity" prefHeight="450" prefWidth="989.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="orderIdCol" prefWidth="90" text="Order ID" />
                  <TableColumn fx:id="confirmationCodeCol" prefWidth="127.33349609375" text="Confirmation code" />
						<TableColumn fx:id="phoneCol" prefWidth="110" text="Phone" />
						<TableColumn fx:id="emailCol" prefWidth="170" text="Email" />
						<TableColumn fx:id="dateCol" prefWidth="110" text="Date" />
						<TableColumn fx:id="startTimeCol" prefWidth="95" text="Start Time" />
						<TableColumn fx:id="finishTimeCol" prefWidth="95" text="Finish Time" />
						<TableColumn fx:id="dinersCol" prefWidth="70" text="Diners" />
						<TableColumn fx:id="statusCol" prefWidth="105.3333740234375" text="Status" />
					</columns>
				</TableView>
			</VBox>
		</VBox>
	</center>

</BorderPane>
