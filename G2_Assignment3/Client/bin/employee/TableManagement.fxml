<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f6f7fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employee.TablesManagementScreen">

    <!-- TOP: Header card -->
    <top>
        <VBox style="-fx-padding: 18;">
            <VBox spacing="8" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">
                <Label style="-fx-font-size: 22px; -fx-font-weight: 800;" text="Table Management" textFill="#000cf8" />

                <Label style="-fx-text-fill: #6a7286;" text="View all tables, edit a selected table, add new tables, or delete existing ones." />
            </VBox>
        </VBox>
    </top>

    <!-- CENTER: Two cards (table + actions) -->
    <center>
        <HBox spacing="14" style="-fx-padding: 0 18 18 18;">

            <!-- LEFT Card: Tables list -->
            <VBox spacing="10" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14px;                               -fx-font-weight: 800;                               -fx-text-fill: #1f2a44;" text="Tables" />

                <TableView fx:id="tablesTable" prefHeight="470" style="-fx-background-radius: 10; -fx-border-radius: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tableNumberCol" prefWidth="160.0" text="Table Number" />
                        <TableColumn fx:id="tableSizeCol" prefWidth="140.0" text="Table Size" />
                        <TableColumn fx:id="reservationCol" prefWidth="220.0" text="Current reservation" />
                    </columns>
                </TableView>
            </VBox>

            <!-- RIGHT Card: Actions -->
            <VBox prefWidth="260" spacing="12" style="-fx-background-color: white;                          -fx-padding: 14;                          -fx-background-radius: 12;                          -fx-border-radius: 12;                          -fx-border-color: #e6e8f0;">

                <Label style="-fx-font-size: 14px;                               -fx-font-weight: 800;                               -fx-text-fill: #1f2a44;" text="Actions" />

                <!-- Edit size -->
                <Label style="-fx-text-fill: #5a6275; -fx-font-weight: 700;" text="Edit selected table" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label prefWidth="70" style="-fx-text-fill: #5a6275;" text="New size:" />
                    <ComboBox fx:id="sizeCombo" prefHeight="32.0" prefWidth="160.0" />
                </HBox>

                <Button fx:id="applySizeBtn" maxWidth="Infinity" onAction="#clickEditSize" prefHeight="34" style="-fx-background-color: #2f5bea;                                -fx-text-fill: white;                                -fx-font-weight: 700;                                -fx-background-radius: 8;" text="Apply Size" />

                <Separator />

                <!-- Add new table -->
                <Label style="-fx-text-fill: #5a6275; -fx-font-weight: 700;" text="Add a new table" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label prefWidth="70" style="-fx-text-fill: #5a6275;" text="Table size:" />
                    <ComboBox fx:id="newTableSize" prefHeight="32.0" prefWidth="160.0" />
                </HBox>

                <Button fx:id="addBtn" maxWidth="Infinity" onAction="#addNewTable" prefHeight="34" style="-fx-background-color: #eef1f7;                                -fx-text-fill: #1f2a44;                                -fx-font-weight: 700;                                -fx-background-radius: 8;" text="Add" />

                <Separator />

                <!-- Delete -->
                <Button fx:id="deleteBtn" maxWidth="Infinity" onAction="#deleteTable" prefHeight="34" style="-fx-background-color: #ffe7e7;                                -fx-text-fill: #b42318;                                -fx-font-weight: 700;                                -fx-background-radius: 8;" text="Delete selected" />

                <!-- Push Back button to bottom -->
                <VBox VBox.vgrow="ALWAYS" />

                <Button fx:id="menuBtn" maxWidth="Infinity" onAction="#clickMenu" prefHeight="36" style="-fx-background-color: #eef1f7;                                -fx-text-fill: #1f2a44;                                -fx-font-weight: 700;                                -fx-background-radius: 8;" text="Back to menu" />
            </VBox>

        </HBox>
    </center>

</BorderPane>
