<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="employee.WorkersLogInScreen">

   <children>
      <Text fill="#130590" layoutX="198.0" layoutY="38.0" text="BISTRO WORKSPACE">
         <font>
            <Font size="22.0" />
         </font>
      </Text>

      <Text layoutX="192.0" layoutY="75.0" text="Please log in using staff credentials">
         <font>
            <Font size="14.0" />
         </font>
      </Text>

      <VBox layoutX="170.0" layoutY="110.0" prefWidth="260.0" spacing="15.0">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Text text="Username:" />
                  <TextField fx:id="usernameTxt" prefWidth="170.0" promptText="Enter username" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Text text="Password:" />
                  <PasswordField fx:id="passwordTxt" prefWidth="170.0" promptText="Enter password" />
               </children>
            </HBox>

            <Text fx:id="statusText" fill="#b00020" />

            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="loginBTN"
                          defaultButton="true"
                          onAction="#login"
                          prefHeight="32.0"
                          prefWidth="110.0"
                          text="Log in" />
               </children>
            </HBox>

         </children>
      </VBox>

      <!-- Back button -->
      <Button fx:id="backBtn"
              text="Back"
              layoutX="520.0"
              layoutY="360.0"
              onAction="#back"/>

   </children>
</Pane>